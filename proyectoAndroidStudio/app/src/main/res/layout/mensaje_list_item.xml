<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mensajeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fechaHoraMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/montserrat"
            android:paddingRight="10dp"
            android:text="Martes 11/11 (11:30)"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/usuarioMensaje"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/person" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tarjetaMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="40dp"
                app:strokeColor="@color/institucional"
                app:strokeWidth="6dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/contenidoMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet.Neque porro quisquam est qui dolorem ipsum quia dolor sit amet. "
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>