<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="40dp"
        app:strokeColor="@color/institucional"
        app:strokeWidth="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#B0B0B0"
                app:strokeColor="#000000"
                app:strokeWidth="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:text="Hoy es"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="40sp"
                        android:text="12"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:text="Sep."
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:text="Siguiente clase"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/tablaHorario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp"
                        android:layout_marginEnd="-5dp"
                        android:layout_marginBottom="-5dp"
                        app:cardBackgroundColor="#B0B0B0"
                        app:strokeColor="#000000"
                        app:strokeWidth="2dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Hora(s)"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_semibold"
                            tools:ignore="SmallSp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="0dp"
                        android:layout_marginEnd="-5dp"
                        android:layout_marginBottom="-5dp"
                        app:cardBackgroundColor="#B0B0B0"
                        app:strokeColor="#000000"
                        app:strokeWidth="2dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="11:00 - 12:00"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_semibold"
                            tools:ignore="SmallSp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp"
                        android:layout_marginBottom="-5dp"
                        app:cardBackgroundColor="#B0B0B0"
                        app:strokeColor="#000000"
                        app:strokeWidth="2dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="12:00 - 13:00"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_semibold"
                            tools:ignore="SmallSp" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp"
                        android:layout_marginEnd="-5dp"
                        android:layout_marginBottom="1dp"
                        app:cardBackgroundColor="#B0B0B0"
                        app:strokeColor="#000000"
                        app:strokeWidth="2dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="MÃ³dulo"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_semibold"
                            tools:ignore="SmallSp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="0dp"
                        android:layout_marginEnd="-5dp"
                        android:layout_marginBottom="1dp"
                        app:cardBackgroundColor="#B0B0B0"
                        app:strokeColor="#000000"
                        app:strokeWidth="2dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Pensamiento matemÃ¡tico I"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_medium"
                            tools:ignore="SmallSp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp"
                        android:layout_marginBottom="1dp"
                        app:cardBackgroundColor="#B0B0B0"
                        app:strokeColor="#000000"
                        app:strokeWidth="2dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="AplicaciÃ³n de tecnologÃ­as digitales"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_medium"
                            tools:ignore="SmallSp" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
